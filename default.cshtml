@using System
@using System.Configuration
@using MySqlConnector
@mSeguridad.CookieID()

@{
    // INICIALIZAMOS MENSAJES DE PORTAL
    Session["mi_perfil_equivocado"] = "";


    // Crear una variable para almacenar todas las keywords concatenadas
    string keywords = "";

    using (MySqlConnection CONN = new MySqlConnection(ConfigurationManager.ConnectionStrings["SDNS"].ConnectionString))
    {
        CONN.Open();


        using (MySqlCommand CMD = new MySqlCommand("SELECT nombre FROM categorias;", CONN)) // Solo seleccionamos el nombre
        {
            using (MySqlDataReader DATOS = CMD.ExecuteReader())
            {
                while (DATOS.Read())
                {
                    // Concatenamos cada nombre de categoría separado por comas
                    keywords += mSeguridad.sslNombreDecodificar(DATOS["nombre"].ToString()) + ", ";
                }
            }
        }

        // Limpiar la última coma y espacio
        if (keywords.EndsWith(", "))
        {
            keywords = keywords.Substring(0, keywords.Length - 2);
        }
    }
}

