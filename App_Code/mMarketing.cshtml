@using System.Configuration;
@using MySqlConnector;

@functions{

    public static string getInfoMarketing(string columna)
    {
        string respuesta = "";

        try
        {
            using (var CONN = new MySqlConnection(ConfigurationManager.ConnectionStrings["SDNS"].ConnectionString))
            {
                CONN.Open();
                using (var CMD = new MySqlCommand("SELECT * FROM marketing WHERE nombre = 'config' LIMIT 1", CONN))
                {
                    var DATOS = CMD.ExecuteReader();
                    while (DATOS.Read())
                    {
                        respuesta = DATOS[columna].ToString();
                    }
                }
            }
        }
        catch (MySqlException ex)
        {
            respuesta = ex.Message;
        }
        return respuesta;
    }

}